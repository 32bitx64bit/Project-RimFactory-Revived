        <squareAreaRadius>4</squareAreaRadius>
        <TickFrequencyDivisor>60</TickFrequencyDivisor>
      </li>
    </modExtensions>
    <placeWorkers>
      <li>ProjectRimFactory.CultivatorTools.PlaceWorker_HighlightPlaceableCells</li>
    </placeWorkers>

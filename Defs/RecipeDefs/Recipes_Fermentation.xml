<Defs>

  <!--================ Beer 6-pack =====================-->
  <RecipeDef>
    <defName>BrewBeer_sixpack</defName>
    <label>Brew beer x6 (6-pack)</label>
    <description>Brew beer x6 (6-pack)</description>
    <jobString>Brewing Beer</jobString>
    <effectWorking>Cook</effectWorking>
    <workSkill>Cooking</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <workAmount>132000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Wort</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Wort</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Beer>6</Beer>
    </products>
  </RecipeDef>


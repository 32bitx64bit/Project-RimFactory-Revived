<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Tier 1 -->
  <ResearchProjectDef>
    <defName>AutomationBasics</defName>
    <label>Automation basics</label>
    <techLevel>Industrial</techLevel>
    <baseCost>1000</baseCost>
    <description>Learn the very basics of automation and mechanisms, the gateway to an industrial colony.</description>
    <prerequisites>
      <li>Machining</li>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>0</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PRFMachineLearning</defName>
    <label>Machine learning</label>
    <techLevel>Industrial</techLevel>
    <baseCost>2000</baseCost>
    <description>Teach machines how to improve their abilities by themselves. Unlocks the AI research bench. Also lets you craft drone modules at the robotic machining table.</description>
    <prerequisites>
      <li>FarmingSprinklers</li>
      <li>MagneticTape</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <tab>Automation</tab>
    <researchViewX>3</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>

  <!-- Tier 2 -->
  <ResearchProjectDef>
    <defName>PRFGoldbachConjecture</defName>
    <label>Goldbach's conjecture</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1500</baseCost>
    <description>"Any even integer greater than or equal to 4 can be formed from the sum of 2 prime numbers."\nUnlocks a new array of research projects.</description>
    <prerequisites>
      <li>PRFMachineLearning</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>4</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>ADVrollers</defName>
    <label>Pullers And Pushers</label>
    <techLevel>Spacer</techLevel>
    <baseCost>500</baseCost>
    <description>pusher and pullers, include both IR and PRF</description>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <prerequisites>
      <li>AutomationBasics</li>
      <li>PRFRollers</li>
    </prerequisites>
    <tab>Automation</tab>
    <researchViewX>2</researchViewX>
    <researchViewY>6</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PRFRollers</defName>
    <label>Belts and Rollers</label>
    <techLevel>Industrial</techLevel>
    <baseCost>500</baseCost>
    <description>Rollers and belts include both IR and PRF</description>
    <prerequisites>
      <li>Machining</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>1</researchViewX>
    <researchViewY>6</researchViewY>
  </ResearchProjectDef>

  <!-- Tier 3 -->
  <ResearchProjectDef>
    <defName>PRFMetalRefining</defName>
    <label>Metal Refining</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2500</baseCost>
    <description>Unlocks metal refining and plasteel creation</description>
    <prerequisites>
      <li>PRFGoldbachConjecture</li>
      <li>AdvancedFabrication</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>4</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>


  <!-- Batteries Taken from SS bigger batteries-->
  <ResearchProjectDef>
    <defName>LargeBatteries</defName>
    <label>large batteries</label>
    <description>Build large batteries for efficient storage of electricity. Unlocks the 4k and 16k battery cell.</description>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>
    <prerequisites>
      <li>Batteries</li>
      <li>AutomationBasics</li>
    </prerequisites>
    <tab>Automation</tab>
    <researchViewX>5</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>VeryLargeBatteries</defName>
    <label>very large batteries</label>
    <description>Learn alternate methods of power storage, and create compact 64k and 256k battery cells for mass storage of power.</description>
    <baseCost>2000</baseCost>
    <techLevel>Spacer</techLevel>
    <prerequisites>
      <li>LargeBatteries</li>
      <li>PRFGoldbachConjecture</li>
    </prerequisites>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>4</researchViewY>
  </ResearchProjectDef>

</Defs>

<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--============================================== Storage Research base ============================================-->
  <ResearchProjectDef Name="PRF_StorageResearch" Abstract="True">
    <tab>Automation</tab>
    <researchViewY>1.7</researchViewY>
  </ResearchProjectDef>


  <ResearchProjectDef ParentName="PRF_StorageResearch">
    <defName>PRF_Crates</defName>
    <techLevel>Industrial</techLevel>
    <baseCost>1500</baseCost>
    <label>Wooden stockpile crates</label>
    <researchViewX>3</researchViewX>
    <description>Allows colonists to build large crates for more compact storage.</description>
    <prerequisites>
      <li>PRF_CoreTierI</li>
    </prerequisites>
  </ResearchProjectDef>

  <ResearchProjectDef ParentName="PRF_StorageResearch">
    <defName>PRF_SteelCrates</defName>
    <techLevel>Industrial</techLevel>
    <baseCost>2000</baseCost>
    <label>Steel stockpile crates</label>
    <researchViewX>6</researchViewX>
    <description>Allows colonists to build reinforced stockpile crates.</description>
    <prerequisites>
      <li>PRF_CoreTierII</li>
      <li>PRF_Crates</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  </ResearchProjectDef>

  <ResearchProjectDef ParentName="PRF_StorageResearch">
    <defName>PRF_StorageIO</defName>
    <techLevel>Spacer</techLevel>
    <baseCost>3500</baseCost>
    <label>Wireless item Storage</label>
    <researchViewX>9</researchViewX>
    <researchViewY>1.9</researchViewY>
    <description>Allows colonists to build cargo platforms and I/O ports. I/O ports can transfer items remotely to and from cargo platforms.</description>
    <prerequisites>
      <li>PRF_SteelCrates</li>
      <li>PRF_CoreTierIII</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  </ResearchProjectDef>
</Defs>

<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ResearchProjectDef>
    <defName>PRFCrates</defName>
    <tab>Automation</tab>
    <techLevel>Industrial</techLevel>
    <baseCost>1500</baseCost>
    <label>Wooden stockpile crates</label>
    <researchViewX>3</researchViewX>
    <researchViewY>1.7</researchViewY>
    <description>Allows colonists to build large crates for more compact storage.</description>
    <prerequisites>
      <li>PRFEulersIdentity</li>
    </prerequisites>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PRFStorage</defName>
    <tab>Automation</tab>
    <techLevel>Industrial</techLevel>
    <baseCost>3000</baseCost>
    <label>Steel stockpile crates</label>
    <researchViewX>6</researchViewX>
    <researchViewY>1.7</researchViewY>
    <description>Allows colonists to build reinforced stockpile crates.</description>
    <prerequisites>
      <li>AutomationBasics</li>
      <li>PRFCrates</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PRFStorageIO</defName>
    <tab>Automation</tab>
    <techLevel>Spacer</techLevel>
    <baseCost>3500</baseCost>
    <label>Wireless item Storage</label>
    <researchViewX>9</researchViewX>
    <researchViewY>1.9</researchViewY>
    <description>Allows colonists to build cargo platforms and I/O ports. I/O ports can transfer items remotely to and from cargo platforms.</description>
    <prerequisites>
      <li>PRFStorage</li>
      <li>PRFGoldbachConjecture</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
  </ResearchProjectDef>
</Defs>

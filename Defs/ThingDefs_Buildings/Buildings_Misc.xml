  <!-- ======================================= Industrial LampBase =============================================== -->
  <ThingDef Name="PRF_IndustrialLamp" ParentName="LampBase">
    <description>An industrial lamp to light up large spaces; it works both inside and outside.</description>
    <fillPercent>0.50</fillPercent>
    <graphicData>
      <texPath>Misc/IndustrialLamp</texPath>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <tickerType>Rare</tickerType>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>500</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>25</Mass>
    </statBases>
    <size>(1,1)</size>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>50</basePowerConsumption>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>1</heatPerSecond>
      </li>
      <li Class="ProjectRimFactory.Misc.CompProperties_Glower_PickColor">
        <!-- colors and label-keys are available in the C#, but you know,
             I should probably make them accessible via XML. Next update -->
        <glowRadius>20</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
    </comps>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
    <designationCategory>Industrial</designationCategory>
    <specialDisplayRadius>20</specialDisplayRadius>
  </ThingDef>
</Defs>

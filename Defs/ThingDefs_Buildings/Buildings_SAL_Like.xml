<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--==================== Dropdown Groups ====================-->
  <DesignatorDropdownGroupDef>
    <defName>AutoMachineGroup</defName>
  </DesignatorDropdownGroupDef>

  <!-- base -->
  <ThingDef Name="PRF_AutoMachineTool_Base" Parent="BuildingBase" Abstract="True">
    <defName>Building_NR_AutoMachineTool_Base</defName>
    <thingClass>ProjectRimFactory.AutoMachineTool.Building_AutoMachineTool</thingClass>
    <description>Place the AutoMachineTool facing the work table.
Set the output destination of the finished product.
The AutoMachineTool executes a requested craft that can be created with the material in the surrounding squares from the work table creation request.
By default, Tier 1 is Skill Level 5, Tier 2 is Skill Level 10, and Tier 3 is Skill Level 20.(Skill level can be changed by MOD setting)</description>
    <designatorDropdown>AutoMachineGroup</designatorDropdown>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <drawerType>MapMeshAndRealTime</drawerType>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <fillPercent>1</fillPercent>

    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>0</basePowerConsumption>
        <shortCircuitInRain>false</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
    </comps>

    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <pathCost>0</pathCost>
    <designationCategory>Industrial</designationCategory>
    <rotatable>true</rotatable>

    <placeWorkers>
      <li>ProjectRimFactory.AutoMachineTool.PlaceWorker_AutoMachineTool</li>
      <li>ProjectRimFactory.AutoMachineTool.PlaceWorker_TargetCellsHilight</li>
      <li>ProjectRimFactory.AutoMachineTool.PlaceWorker_OutputCellsHilight</li>
    </placeWorkers>

    <category>Building</category>

    <repairEffect>Repair</repairEffect>
    <constructEffect>ConstructMetal</constructEffect>
    <size>(1,1)</size>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <passability>Standable</passability>
    <selectable>True</selectable>

    <inspectorTabs>
      <li>NR_AutoMachineTool.ITab_RangePowerSupply</li>
    </inspectorTabs>
  </ThingDef>


  <!-- tier 1-->
  <ThingDef ParentName="PRF_AutoMachineTool_Base">
    <defName>Building_NR_AutoMachineTool_TierOne</defName>
    <label>S.A.L T1</label>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <graphicData>
      <texPath>AutoMachineTool/Buildings/AutoMachineTool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <costList>
      <Steel>200</Steel>
      <Plasteel>100</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <researchPrerequisites>
    </researchPrerequisites>
    <modExtensions>
      <li Class="NR_AutoMachineTool.ModExtension_AutoMachineTool">
        <tier>1</tier>
        <targetCellResolverType>NR_AutoMachineTool.Building_AutoMachineToolCellResolver</targetCellResolverType>
        <outputCellResolverType>NR_AutoMachineTool.Building_AutoMachineToolCellResolver</outputCellResolverType>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- tier 2-->
  <ThingDef ParentName="PRF_AutoMachineTool_Base">
    <defName>Building_NR_AutoMachineTool_TierTwo</defName>
    <label>S.A.L T3</label>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <graphicData>
      <texPath>NAutoMachineTool/Buildings/AutoMachineTool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <costList>
      <Steel>800</Steel>
      <Plasteel>500</Plasteel>
      <Silver>2000</Silver>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <researchPrerequisites>
    </researchPrerequisites>
    <modExtensions>
      <li Class="NR_AutoMachineTool.ModExtension_AutoMachineTool">
        <tier>2</tier>
        <targetCellResolverType>NR_AutoMachineTool.Building_AutoMachineToolCellResolver</targetCellResolverType>
        <outputCellResolverType>NR_AutoMachineTool.Building_AutoMachineToolCellResolver</outputCellResolverType>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- tier 3-->
  <ThingDef ParentName="PRF_AutoMachineTool_Base">
    <defName>Building_NR_AutoMachineTool_TierThree</defName>
    <label>S.A.L T3</label>
    <constructionSkillPrerequisite>15</constructionSkillPrerequisite>
    <graphicData>
      <texPath>AutoMachineTool/Buildings/AutoMachineTool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <costList>
      <Steel>4000</Steel>
      <Plasteel>2000</Plasteel>
      <Gold>2000</Gold>
      <ComponentSpacer>15</ComponentSpacer>
    </costList>
    <researchPrerequisites>
    </researchPrerequisites>
    <modExtensions>
      <li Class="NR_AutoMachineTool.ModExtension_AutoMachineTool">
        <tier>3</tier>
        <targetCellResolverType>NR_AutoMachineTool.Building_AutoMachineToolCellResolver</targetCellResolverType>
        <outputCellResolverType>NR_AutoMachineTool.Building_AutoMachineToolCellResolver</outputCellResolverType>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>
    <researchPrerequisites>
      <li>PRFStorage</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>0</basePowerConsumption>
      </li>
    </comps>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <modExtensions>
      <li Class="ProjectRimFactory.Storage.Editables.DefModExtension_CanUseStorageIOPorts" />
    </modExtensions>
  </ThingDef>

  <!--==================== Cargo Platform ====================-->
  <ThingDef ParentName="PRFMassStorageBase">
    <defName>PRFCargoPlatform</defName>
    <label>cargo platform</label>
    <uiIconScale>0.9</uiIconScale>
    <designatorDropdown>prfstorage_gr</designatorDropdown>
    <thingClass>ProjectRimFactory.Storage.Building_MassStorageUnitPowered</thingClass>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>      <!-- for being able to swap between textures each rotation -->
      <texPath>Storage/CargoPlatform</texPath>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <rotatable>True</rotatable>    <!-- for being able to swap between textures each rotation -->
    <statBases>
      <Mass>15</Mass>
      <MaxHitPoints>450</MaxHitPoints>
      <WorkToBuild>2500</WorkToBuild>
      <Flammability>0.1</Flammability>
      <Beauty>0.5</Beauty>
    </statBases>
    <description>Stores endless amounts of items. Consumes 10 watts of power per stack it holds. When your colony loses power, items will be safely stored inside, but the building will stop pulling the items into the central cell.</description>
    <blockWind>true</blockWind>
    <size>(3,3)</size>
    <pathCost>150</pathCost>
    <costList>
      <Steel>300</Steel>
      <Gold>50</Gold>
      <Uranium>20</Uranium>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <constructEffect>ConstructMetal</constructEffect>
    <tickerType>Normal</tickerType>
    <researchPrerequisites>
      <li>PRFStorage</li>
    </researchPrerequisites>
    <designationCategory>Industrial</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>0</basePowerConsumption>
      </li>
    </comps>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <modExtensions>
      <li Class="ProjectRimFactory.Storage.Editables.DefModExtension_CanUseStorageIOPorts" />
      <li Class="ProjectRimFactory.Storage.Editables.DefModExtension_Crate">
        <limit>100</limit>
        <destroyContainsItems>false</destroyContainsItems>
      </li>
    </modExtensions>
  </ThingDef>


</Defs>
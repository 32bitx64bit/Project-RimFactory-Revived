<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--==================== Dropdown Groups ====================-->
  <DesignatorDropdownGroupDef>
    <defName>prfstorage_gr</defName>
  </DesignatorDropdownGroupDef>
  <!--==================== Base ====================-->
  <ThingDef ParentName="PRFBuildingBase" Name="PRFMassStorageBase" Abstract="True">
    <thingClass>ProjectRimFactory.Storage.Building_Crate</thingClass>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
    <altitudeLayer>Gas</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>150</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>1.0</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <drawGUIOverlay>true</drawGUIOverlay>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <fixedStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>Manufactured</li>
            <li>ResourcesRaw</li>
            <li>Items</li>
            <li>BuildingsArt</li>
            <li>Weapons</li>
            <li>Apparel</li>
            <li>BodyParts</li>
          </categories>
          <specialFiltersToDisallow>
            <li>AllowRotten</li>            <!-- Disallow rotten by default -->
          </specialFiltersToDisallow>
        </filter>
      </defaultStorageSettings>
    </building>
    <thingCategories>
      <li>BuildingsAutomation</li>
    </thingCategories>
    <minifiedDef>MinifiedThing</minifiedDef>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Storage</li>
      <li>ProjectRimFactory.Storage.UI.ITab_Items</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>ProjectRimFactory.Common.CompPRFHelp</compClass>
      </li>
    </comps>
  </ThingDef>

  <!--==================== Wood Crate ====================-->
  <ThingDef ParentName="PRFMassStorageBase">
    <defName>StockpileCrate</defName>
    <label>wooden crate</label>
    <uiIconScale>0.7</uiIconScale>
    <designatorDropdown>prfstorage_gr</designatorDropdown>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Storage/Wood_Crate6</texPath>
      <drawSize>(2.8,2.6)</drawSize>
      <color>(133,97,67,256)</color>      <!-- used to set wood color because stuffed isnt used -->
    </graphicData>
    <statBases>
      <Mass>10</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>-0.5</Beauty>
    </statBases>
    <description>(Tier 1 crate) A giant crate that can store 32 stacks. Items stored in the crate do not deteriorate.</description>
    <size>(2,2)</size>
    <costList>
      <WoodLog>80</WoodLog>
      <Steel>20</Steel>
    </costList>
    <constructEffect>ConstructWood</constructEffect>
    <researchPrerequisites>
      <li>PRFCrates</li>
    </researchPrerequisites>
    <designationCategory>Industrial</designationCategory>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <modExtensions>
      <li Class="ProjectRimFactory.Storage.Editables.DefModExtension_Crate">
        <limit>32</limit>
      </li>
    </modExtensions>
  </ThingDef>

  <!--==================== Tiny Steel Crate ====================-->
  <ThingDef ParentName="PRFMassStorageBase">
    <defName>StockpileCrateReinforcedTiny</defName>
    <label>tiny steel crate</label>
    <uiIconScale>0.7</uiIconScale>
    <designatorDropdown>prfstorage_gr</designatorDropdown>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Storage/Steel_Crate</texPath>
      <drawSize>(1.4,1.3)</drawSize>
      <color>(102,102,105,256)</color>
    </graphicData>
    <statBases>
      <Mass>10</Mass>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>2500</WorkToBuild>
      <Flammability>0.1</Flammability>
      <Beauty>-0.1</Beauty>
    </statBases>
    <description>(Tier 2 crate) A tiny steel crate that can store 64 stacks. Items stored in the crate do not deteriorate.</description>
    <size>(1,1)</size>
    <costList>
      <Steel>60</Steel>
    </costList>
    <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>PRFStorage</li>
    </researchPrerequisites>
    <designationCategory>Industrial</designationCategory>
    <modExtensions>
      <li Class="ProjectRimFactory.Storage.Editables.DefModExtension_Crate">
        <limit>64</limit>
      </li>
    </modExtensions>
  </ThingDef>



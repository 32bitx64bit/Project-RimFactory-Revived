<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <DesignatorDropdownGroupDef>
    <defName>floor_lights</defName>
  </DesignatorDropdownGroupDef>

  <!-- ================= Base ================= -->
  <TerrainDef Name="PRF_FloorSign" Abstract="True">
    <thingClass>Building</thingClass>
    <category>Building</category>
    <designationCategory>Industrial</designationCategory>
    <designatorDropdown>floor_lights</designatorDropdown>
    <rotatable>true</rotatable>
    <altitudeLayer>Floor</altitudeLayer>
    <passability>Standable</passability>
    <selectable>true</selectable>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(113,141,117,0)</glowColor>
      </li>
      <li>
        <compClass>ProjectRimFactory.Common.CompPRFHelp</compClass>
      </li>
    </comps>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <size>(1,1)</size>
    <researchPrerequisites>      <!-- Optional. The player will not be able to build the floor or terrain until completing one or more research projects -->
      <li>Machining</li>
    </researchPrerequisites>
  </TerrainDef>


  <!-- ================= Yellow Arrow ================= -->
  <ThingDef ParentName="PRF_FloorSign">
    <defName>Lighting_FloorLampArrow</defName>
    <label>Yellow Floor Sign Arrow</label>
    <graphicData>
      <texPath>Misc/FloorLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>110</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
    </statBases>
    <description>Weak florescent Floor sign in an Arrow shape to show direction?</description>
    <costList>
      <Steel>2</Steel>
    </costList>
  </ThingDef>

